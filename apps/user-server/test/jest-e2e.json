{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^libs/modules(.*)": "<rootDir>/libs/modules/src/$1",
    "^libs/common(.*)": "<rootDir>/libs/common/src/$1",
    "^libs/testing(.*)": "<rootDir>/libs/testing/src/$1"
  }
}
