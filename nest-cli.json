{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/liket-mobile-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [
            "dto.ts",
            "entity.ts"
          ],
          "controllerKeyOfComment": "summary"
        }
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/liket-mobile-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/liket-mobile-backend",
  "projects": {
    "liket-mobile-backend": {
      "type": "application",
      "root": "apps/liket-mobile-backend",
      "entryFile": "main",
      "sourceRoot": "apps/liket-mobile-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/liket-mobile-backend/tsconfig.app.json"
      }
    },
    "mobile-batch": {
      "type": "application",
      "root": "apps/mobile-batch",
      "entryFile": "main",
      "sourceRoot": "apps/mobile-batch/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mobile-batch/tsconfig.app.json"
      }
    },
    "modules": {
      "type": "library",
      "root": "libs/modules",
      "entryFile": "index",
      "sourceRoot": "libs/modules/src",
      "compilerOptions": {
        "tsConfigPath": "libs/modules/tsconfig.lib.json"
      }
    }
  }
}