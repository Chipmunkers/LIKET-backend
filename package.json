{
  "name": "liket-backend",
  "description": "Liket Backend with monorepo",
  "author": "jochongs",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/liket-mobile-backend",
    "apps/mobile-batch",
    "libs/modules"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/liket-mobile-backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./apps/liket-mobile-backend/test/e2e/.env.test -- jest --config ./test/jest-e2e.json --verbose",
    "seed": "dotenv -e ./prisma/.env.seed --ts-node prisma/seed.ts",
    "dev-deploy:up": "docker compose -p liket-mobile -f dev-deploy/docker-compose.yml up -d",
    "dev-deploy:down": "docker compose -p liket-mobile -f dev-deploy/docker-compose.yml down",
    "test-infra:up": "docker compose -p liket-mobile-test -f test/e2e/infra/docker-compose.yml up -d",
    "test-infra:down": "docker compose -p liket-mobile-test -f test/e2e/infra/docker-compose.yml down -v",
    "load-test-infra:up": "docker compose -p liket-mobile-load-test -f test/load/infra/docker-compose.yml up -d --build --force-recreate",
    "load-test-infra:down": "docker compose -p liket-mobile-load-test -f test/load/infra/docker-compose.yml down -v",
    "load-test-seed": "ts-node test/load/infra/seed/index.ts",
    "load-test": "k6 run ./test/load/script/culture-content.js -v"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.529.1",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/multer": "^1.4.11",
    "@chax-at/transactional-prisma-testing": "^1.2.0",
    "@faker-js/faker": "^8.4.1",
    "@nestia/sdk": "^2.5.11",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test/unit",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^libs/modules(|/.*)$": "<rootDir>/libs/modules/src/$1"
    }
  }
}