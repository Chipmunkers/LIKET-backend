{
  "name": "liket-backend",
  "description": "Liket Backend with monorepo",
  "author": "jochongs",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/user-server",
    "apps/batch-server",
    "apps/admin-server",
    "libs/modules",
    "libs/core"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/user-server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "seed": "dotenv -e ./prisma/.env.seed --ts-node prisma/seed.ts",
    "user-server:dev:infra:up": "docker compose -p liket-mobile -f scripts/user-server/dev/docker-compose.yml up -d",
    "user-server:dev:infra:down": "docker compose -p liket-mobile -f scripts/user-server/dev/docker-compose.yml down -v",
    "user-server:test:e2e": "dotenv -e scripts/user-server/e2e-test/.env.test -- jest --config ./apps/user-server/test/jest-e2e.json --verbose apps/user-server/test/e2e",
    "user-server:test:infra:up": "docker compose -p liket-mobile-test -f scripts/user-server/e2e-test/docker-compose.yml up -d",
    "user-server:test:infra:down": "docker compose -p liket-mobile-test -f scripts/user-server/e2e-test/docker-compose.yml down -v",
    "user-server:load-test:infra:up": "docker compose -p liket-mobile-load-test -f scripts/user-server/load-test/docker-compose.yml up -d --build --force-recreate",
    "user-server:load-test:infra:down": "docker compose -p liket-mobile-load-test -f scripts/user-server/load-test/docker-compose.yml down -v",
    "user-server:load-test:seed": "ts-node apps/user-server/test/load/infra/seed/index.ts",
    "user-server:load-test": "k6 run ./apps/user-server/test/load/culture-content.js -v",
    "admin-server:dev:infra:up": "docker compose -p liket-admin-server -f scripts/admin-server/dev/docker-compose.yml up -d",
    "admin-server:dev:infra:down": "docker compose -p liket-admin-server -f scripts/admin-server/dev/docker-compose.yml down -v",
    "admin-server:test:infra:up": "docker compose -p liket-admin-test -f scripts/admin-server/e2e-test/docker-compose.yml up -d",
    "admin-server:test:infra:down": "docker compose -p liket-admin-test -f scripts/admin-server/e2e-test/docker-compose.yml down -v",
    "admin-server:test:e2e": "dotenv -e scripts/admin-server/e2e-test/.env.test -- jest --config ./apps/admin-server/test/jest-e2e.json --verbose apps/admin-server/test/e2e"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@aws-sdk/lib-storage": "^3.744.0",
    "@nestjs-cls/transactional": "^2.4.9",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.12",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.8",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.8",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.8",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/throttler": "^6.4.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "nestjs-cls": "^5.1.2",
    "openai": "^4.83.0",
    "prisma": "^6.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@chax-at/transactional-prisma-testing": "^1.3.1",
    "@faker-js/faker": "^9.4.0",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.8",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "i": "^0.3.7",
    "jest": "^29.7.0",
    "npm": "^11.1.0",
    "prettier": "^3.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test/unit",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^libs/modules(|/.*)$": "<rootDir>/libs/modules/src/$1",
      "^libs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^lib/testing(|/.*)$": "<rootDir>/libs/testing/src/$1",
      "^lib/core(|/.*)$": "<rootDir>/libs/core/src/$1"
    }
  }
}
