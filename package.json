{
  "name": "liket-backend",
  "description": "Liket Backend with monorepo",
  "author": "jochongs",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/user-server",
    "apps/batch-server",
    "apps/admin-server",
    "libs/modules"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/user-server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "seed": "dotenv -e ./prisma/.env.seed --ts-node prisma/seed.ts",
    "user-server:dev:infra:up": "docker compose -p liket-mobile -f scripts/user-server/dev/docker-compose.yml up -d",
    "user-server:dev:infra:down": "docker compose -p liket-mobile -f scripts/user-server/dev/docker-compose.yml down -v",
    "user-server:test:e2e": "dotenv -e scripts/user-server/e2e-test/.env.test -- jest --config ./apps/user-server/test/jest-e2e.json --verbose apps/user-server/test/e2e",
    "user-server:test:infra:up": "docker compose -p liket-mobile-test -f scripts/user-server/e2e-test/docker-compose.yml up -d",
    "user-server:test:infra:down": "docker compose -p liket-mobile-test -f scripts/user-server/e2e-test/docker-compose.yml down -v",
    "user-server:load-test:infra:up": "docker compose -p liket-mobile-load-test -f scripts/user-server/load-test/docker-compose.yml up -d --build --force-recreate",
    "user-server:load-test:infra:down": "docker compose -p liket-mobile-load-test -f scripts/user-server/load-test/docker-compose.yml down -v",
    "user-server:load-test:seed": "ts-node apps/user-server/test/load/infra/seed/index.ts",
    "user-server:load-test": "k6 run ./apps/user-server/test/load/culture-content.js -v",
    "admin-server:dev:infra:up": "docker compose -p liket-admin-server -f scripts/admin-server/dev/docker-compose.yml up -d",
    "admin-server:dev:infra:down": "docker compose -p liket-admin-server -f scripts/admin-server/dev/docker-compose.yml down -v"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.529.1",
    "@aws-sdk/lib-storage": "^3.705.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.77.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@chax-at/transactional-prisma-testing": "^1.2.0",
    "@faker-js/faker": "^8.4.1",
    "@nestia/sdk": "^2.5.11",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "i": "^0.3.7",
    "jest": "^29.5.0",
    "npm": "^10.9.2",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test/unit",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^libs/modules(|/.*)$": "<rootDir>/libs/modules/src/$1",
      "^libs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^lib/testing(|/.*)$": "<rootDir>/libs/testing/src/$1"
    }
  }
}
